FROM python:3.12-slim

RUN apt-get update \
    && apt-get install -y \
        build-essential \
        default-libmysqlclient-dev \
        pkg-config \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# ðŸ‘‡ THIS IS THE IMPORTANT PART
COPY . /app
